<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/memory_cardview"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="2dp"
        app:contentPadding="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            >

            <TextView
                android:id="@+id/memory_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/memory_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/memory_title"
                android:maxLines="2"
                android:ellipsize="end"/>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/memory_edit_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="?android:attr/listDivider"/>

            <Button
                android:id="@+id/memory_edit_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/edit"
                android:textColor="@color/colorPrimary"/>

            <Button
                android:id="@+id/memory_delete_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:layout_below="@+id/view"
                android:layout_toEndOf="@+id/memory_edit_button"
                android:layout_toRightOf="@+id/memory_edit_button"
                android:text="@string/delete"
                android:textColor="@color/colorAccent"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
