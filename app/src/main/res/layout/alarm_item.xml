<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/alarm_cardview"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="2dp"
        app:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="86dp">

            <View
                android:id="@+id/view"
                android:layout_width="183dp"
                android:layout_height="1dp"
                android:layout_above="@+id/alarm_edit_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="?android:attr/listDivider"/>

            <Button
                android:id="@+id/alarm_edit_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/alarm_time"
                android:text="@string/edit"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/alarm_delete_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:layout_below="@+id/alarm_time"
                android:layout_toEndOf="@+id/alarm_edit_button"
                android:text="@string/delete"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/alarm_time"
                android:layout_width="183dp"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="TextView"
                android:textSize="30sp" />

            <Switch
                android:id="@+id/alarm_switch"
                android:layout_width="50dp"
                android:layout_height="17dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
